<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:onClick=""
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/settings_tariffset_premium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spielansage"
        android:textAlignment="textEnd"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <View style="@style/Horizontal_Spacer" />

    <TextView
        android:id="@+id/settings_tariffset_premium_value_silent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="Punkte still"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/settings_tariffset_premium_value_called"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="16dp"
        android:text="Punkte angesagt"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</LinearLayout>