<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/BasicLayout" >

    <RadioGroup
        android:id="@+id/tariffset_new_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checkedButton="@+id/tariffset_new_empty"
        android:orientation="vertical" >

        <RadioButton
            android:id="@+id/tariffset_new_empty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Leeres Tarifset" />

        <RadioButton
            android:id="@+id/tariffset_new_basedon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="" />
    </RadioGroup>

    <Spinner
        android:id="@+id/tariffset_new_basedon_spinner"
        style="@style/SpinnerTheme"
        android:spinnerMode="dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="24dp" />

</RelativeLayout>