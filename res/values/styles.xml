<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- the theme applied to the application or activity -->
    <style name="DefaultTheme" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/DefaultActionBar</item>
        <item name="android:actionOverflowButtonStyle">@android:style/Widget.Holo.ActionButton.Overflow</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="android:alertDialogStyle">@style/MyDialog</item>
        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="SessionTheme" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/SessionActionBar</item>
        <item name="android:actionOverflowButtonStyle">@android:style/Widget.Holo.ActionButton.Overflow</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="android:alertDialogStyle">@style/MyDialog</item>
        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="GameTheme" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/GameActionBar</item>
        <item name="android:actionOverflowButtonStyle">@android:style/Widget.Holo.ActionButton.Overflow</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="android:alertDialogStyle">@style/MyDialog</item>
        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="PlayerTheme" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/PlayerActionBar</item>
        <item name="android:actionOverflowButtonStyle">@android:style/Widget.Holo.ActionButton.Overflow</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="android:alertDialogStyle">@style/MyDialog</item>
        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="TariffsetTheme" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/TariffsetActionBar</item>
        <item name="android:actionOverflowButtonStyle">@android:style/Widget.Holo.ActionButton.Overflow</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="android:alertDialogStyle">@style/MyDialog</item>
        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="InfoTheme" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/InfoActionBar</item>
        <item name="android:actionOverflowButtonStyle">@android:style/Widget.Holo.ActionButton.Overflow</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="android:alertDialogStyle">@style/MyDialog</item>
        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="ImExportTheme" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/ImEsportActionBar</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="android:alertDialogStyle">@style/MyDialog</item>
        <item name="android:windowBackground">@color/background</item>
    </style>

    <!-- Menu styles -->
    <style name="PopupMenu" parent="android:Widget.Holo.Light.ListPopupWindow">
        <!-- <item name="android:popupBackground">@color/background</item> -->
    </style>

    <!-- Dialog styles -->
    <style name="MyDialog" parent="@android:style/Theme.Dialog">
        <item name="android:background">@color/background</item>
    </style>

    <!-- ActionBar styles -->
    <style name="DefaultActionBar" parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/bar_default</item>
    </style>

    <style name="SessionActionBar" parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/session</item>
    </style>

    <style name="GameActionBar" parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/game</item>
    </style>

    <style name="PlayerActionBar" parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/player</item>
    </style>

    <style name="TariffsetActionBar" parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/tariffset</item>
    </style>

    <style name="InfoActionBar" parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/info</item>
    </style>

    <style name="ImEsportActionBar" parent="android:Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@color/imexport</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="BasicRelativeLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="BasicButtonLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">@dimen/padding_side</item>
        <item name="android:paddingLeft">@dimen/padding_side</item>
        <item name="android:paddingBottom">@dimen/padding_button_bottom</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center|bottom</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="BasicScrollViewLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- <item name="android:padding">@dimen/padding_side</item> -->
        <item name="android:fillViewport">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_above">@id/buttons</item>
    </style>

    <style name="BasicContentLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/padding_side</item>
        <item name="android:paddingRight">@dimen/padding_side</item>
        <item name="android:paddingLeft">@dimen/padding_side</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="BasicLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">@dimen/padding_side</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ListLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingTop">@dimen/list_padding_topbottom</item>
        <item name="android:paddingBottom">@dimen/list_padding_topbottom</item>
        <item name="android:baselineAligned">false</item>
    </style>

    <style name="SwitchWonLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:switchMinWidth">40dp</item>
        <item name="android:textOff"></item>
        <item name="android:textOn"></item>
        <item name="android:thumb">@drawable/switch_won_thumb</item>
        <item name="android:track">@drawable/switch_won_track</item>
    </style>

    <style name="SwitchBlueLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">0dp</item>
        <item name="android:switchMinWidth">48dp</item>
        <item name="android:thumb">@drawable/switch_thumb</item>
        <item name="android:track">@drawable/switch_track</item>
        <item name="android:thumbTextPadding">4dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_height</item>
        <item name="android:background">?android:attr/dividerHorizontal</item>
    </style>

    <style name="Divider_Option">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_dialog_height</item>
        <item name="android:background">?android:attr/dividerHorizontal</item>
    </style>

    <style name="Divider_Dialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_dialog_height</item>
        <item name="android:background">?android:color/holo_blue_bright</item>
    </style>

    <style name="Vertical_Spacer">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="Horizontal_Spacer">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="SpinnerTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:spinnerItemStyle">@style/mySpinnerItem</item>
        <item name="android:spinnerDropDownItemStyle">@style/mySpinnerDropDownItem</item>
        <item name="android:textViewStyle">@style/QText</item>
    </style>

    <style name="QText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#123</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="mySpinnerItem">
        <item name="android:textAppearance">@style/mySpinnerItemAppearance</item>
    </style>

    <style name="mySpinnerItemAppearance">
        <item name="android:textColor">#123</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="mySpinnerDropDownItem">
        <item name="android:textColor">#abc</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

</resources>